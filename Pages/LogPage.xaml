<Page x:Class="dom_texniki.Auth"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:dom_texniki"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Login">

    <Grid Background="White">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Вход" FontFamily="Arial" FontSize="20" TextAlignment="Center" FontWeight="Bold"></TextBlock>
        <Label Content="Введите логин:"></Label>
        <TextBox x:Name="LoginTextBox"></TextBox>
        <Label Content="Введите пароль:"></Label>
        <PasswordBox x:Name="PasswordBox"></PasswordBox>
        <Button Margin="10" Content="Войти" Width="130" Click="Button_Click"></Button>
        </StackPanel>
    </Grid>
</Page>
